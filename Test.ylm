name: Telegram Test
on:
  workflow_dispatch: {}

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Show secrets state (masklanmış)
        run: |
          echo "Has TOKEN? $([ -n '${{ secrets.TELEGRAM_BOT_TOKEN }}' ] && echo YES || echo NO)"
          echo "Has CHAT_ID? $([ -n '${{ secrets.TELEGRAM_CHAT_ID }}' ] && echo YES || echo NO)"

      - name: Ping Telegram via curl
        run: |
          set -e
          URL="https://api.telegram.org/bot${{ secrets.TELEGRAM_BOT_TOKEN }}/sendMessage"
          echo "POST -> $URL (masked)"
          curl -sS -X POST "$URL" \
            -d chat_id="${{ secrets.TELEGRAM_CHAT_ID }}" \
            -d text="✅ GitHub Actions-dan sınaq ping" \
            -d parse_mode="HTML" | tee resp.json
          echo ""
          echo "Response:"
          cat resp.json
          echo ""
          # cavabda ok:true olmalıdır
          grep -q '"ok":true' resp.json
